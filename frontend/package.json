{
  "name": "dhk-align-frontend",
  "version": "2.0.0",
  "private": true,
  "description": "WRAITH Translation Frontend - Clean, modular React app",
  "dependencies": {
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "vite build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint src --ext .js,.jsx",
    "lint:fix": "eslint src --ext .js,.jsx --fix",
    "dev": "vite",
    "preview": "vite preview"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "warn"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/eslint-parser": "7.23.10",
    "@vitejs/plugin-react": "^5.0.4",
    "eslint": "8.57.0",
    "vite": "^7.1.9"
  }
}
