# === DHK Align Frontend (.env) ===
# ⚠️ Never put private API keys here — visible to all users.
# ⚠️ Only REACT_APP_ prefixed variables are exposed to React.

# =============================================================================
# Backend (optional — frontend works fully client-side)
# =============================================================================
REACT_APP_API_BASE_URL=http://localhost:8000
REACT_APP_OFFLINE_MODE=false

# =============================================================================
# Translation Engine
# =============================================================================
REACT_APP_MAX_INPUT_LENGTH=200
REACT_APP_ENABLE_FUZZY_MATCHING=true
REACT_APP_ENABLE_COMPOUND_WORDS=true
REACT_APP_CACHE_TTL=300000
REACT_APP_MAX_CACHE_SIZE=100

# =============================================================================
# UI / UX
# =============================================================================
REACT_APP_DEFAULT_THEME=auto
REACT_APP_SHOW_USAGE_COUNTER=true
REACT_APP_ENABLE_PWA=true
REACT_APP_ENABLE_FEEDBACK=true

# =============================================================================
# Logging
# =============================================================================
REACT_APP_LOG_LEVEL=info
REACT_APP_ENABLE_CONSOLE_LOGS=false

# =============================================================================
# Payments (Public Keys Only)
# =============================================================================
REACT_APP_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key_here
REACT_APP_BTCPAY_URL=https://btcpay.dhkalign.com
REACT_APP_PAYMENT_METHODS=both
REACT_APP_ENABLE_CRYPTO_PAYMENTS=true

# =============================================================================
# Security
# =============================================================================
REACT_APP_ENABLE_CSP_REPORTING=true
REACT_APP_CSP_REPORT_URL=/api/csp-report

# =============================================================================
# Environment
# =============================================================================
REACT_APP_ENV=development